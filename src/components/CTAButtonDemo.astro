---
import CTAButton from './CTAButton.astro';
---

<!-- Demo page to showcase CTAButton features -->
<div class="p-8 space-y-8 bg-base-100">
  <h2 class="text-3xl font-bold text-primary mb-8">CTAButton Component Demo</h2>
  
  <!-- Basic Variants -->
  <section class="space-y-4">
    <h2 class="text-2xl font-semibold text-base-content">Basic Variants</h2>
    <div class="flex flex-wrap gap-4">
      <CTAButton variant="primary">Primary Button</CTAButton>
      <CTAButton variant="soft">Soft Button</CTAButton>
      <CTAButton variant="outline">Outline Button</CTAButton>
      <CTAButton variant="link">Link Button</CTAButton>
    </div>
  </section>
  
  <!-- Sizes -->
  <section class="space-y-4">
    <h2 class="text-2xl font-semibold text-base-content">Sizes</h2>
    <div class="flex flex-wrap items-center gap-4">
      <CTAButton size="sm" variant="primary">Small</CTAButton>
      <CTAButton size="md" variant="primary">Medium</CTAButton>
      <CTAButton size="lg" variant="primary">Large</CTAButton>
    </div>
  </section>
  
  <!-- States -->
  <section class="space-y-4">
    <h2 class="text-2xl font-semibold text-base-content">States</h2>
    <div class="flex flex-wrap gap-4">
      <CTAButton variant="primary">Normal</CTAButton>
      <CTAButton variant="primary" disabled={true}>Disabled</CTAButton>
      <CTAButton variant="primary" loading={true}>Loading</CTAButton>
    </div>
  </section>
  
  <!-- With Icons -->
  <section class="space-y-4">
    <h2 class="text-2xl font-semibold text-base-content">With Icons</h2>
    <div class="flex flex-wrap gap-4">
      <CTAButton variant="primary" icon="left">
        <svg slot="icon-left" class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
        Left Icon
      </CTAButton>
      
      <CTAButton variant="outline" icon="right">
        Right Icon
        <svg slot="icon-right" class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M9 5l7 7-7 7"/>
        </svg>
      </CTAButton>
    </div>
  </section>
  
  <!-- Full Width -->
  <section class="space-y-4">
    <h2 class="text-2xl font-semibold text-base-content">Full Width</h2>
    <CTAButton variant="primary" fullWidth={true}>Full Width Button</CTAButton>
  </section>
  
  <!-- Accessibility Features -->
  <section class="space-y-4">
    <h2 class="text-2xl font-semibold text-base-content">Accessibility Features</h2>
    <div class="flex flex-wrap gap-4">
      <CTAButton 
        variant="primary" 
        aria-label="Save document with keyboard shortcut Ctrl+S"
        aria-describedby="save-help"
      >
        Save
      </CTAButton>
      <p id="save-help" class="sr-only">This will save your current work</p>
      
      <CTAButton 
        href="https://example.com" 
        target="_blank"
        variant="outline"
        aria-label="Visit external website (opens in new tab)"
      >
        External Link
      </CTAButton>
    </div>
  </section>
</div>