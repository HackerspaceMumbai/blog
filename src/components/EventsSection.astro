---
import CTAButton from './CTAButton.astro';
import EventCard from './EventCard.astro';
import SectionHeading from './SectionHeading.astro';

export interface Event {
  title: string;
  date: string;
  location: string;
  description: string;
  rsvpLink: string;
  coverImage?: string | ImageMetadata;
}

interface Props {
  events: Event[];
  /** Optional title override */
  title?: string;
  /** Optional CTA button text */
  ctaText?: string;
  /** Optional CTA button URL */
  ctaUrl?: string;
}

const {
  events,
  title = "Upcoming Events",
  ctaText = "View All Events",
  ctaUrl = "https://www.meetup.com/mumbai-technology-meetup/events/",
} = Astro.props;

// Validate and sanitize events array
const validateEvents = (events: Event[]): Event[] => {
  try {
    if (!Array.isArray(events)) {
      console.warn('Events is not an array, using empty array');
      return [];
    }
    // Filter out invalid events and limit to reasonable number
    const validEvents = events
      .filter(event => {
        if (!event || typeof event !== 'object') return false;
        if (!event.title || typeof event.title !== 'string') return false;
        if (!event.date || typeof event.date !== 'string') return false;
        if (!event.location || typeof event.location !== 'string') return false;
        if (!event.description || typeof event.description !== 'string') return false;
        if (!event.rsvpLink || typeof event.rsvpLink !== 'string') return false;
        return true;
      })
      .slice(0, 8); // Limit to 8 events for performance
    return validEvents;
  } catch (error) {
    console.error('Error validating events:', error);
    return [];
  }
};

const validatedEvents = validateEvents(events);

// Determine grid layout based on number of events
const getGridClasses = (eventCount: number): string => {
  if (eventCount === 0) return '';
  if (eventCount === 1) return 'grid-cols-1 max-w-4xl mx-auto';
  if (eventCount === 2) return 'grid-cols-1 md:grid-cols-2 max-w-6xl mx-auto';
  return 'grid-cols-1 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 max-w-7xl mx-auto';
};

const gridClasses = getGridClasses(validatedEvents.length);
---
<section 
  class="pt-8 pb-16 px-4 bg-base-100 text-base-content"
  aria-labelledby="events-section-title"
  role="region"
>
  <div class="max-w-7xl mx-auto">
    <!-- Section Header -->
    <header class="mb-16 text-center">
      <SectionHeading 
        id="events" 
        level={2}
        class="text-3xl font-bold text-primary focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-background rounded-md"
      >
        {title}
      </SectionHeading>
      <p class="mt-4 text-base-content/70 max-w-2xl mx-auto">
        Join us for upcoming meetups, workshops, and community events in Mumbai
      </p>
    </header>

    {/* Enhanced Responsive Grid with improved accessibility and dynamic layout */}
    {validatedEvents.length > 0 && (
      <div 
        class={`grid ${gridClasses} gap-8 items-start mb-8`}
        role="list"
        aria-label={`${validatedEvents.length} upcoming event${validatedEvents.length === 1 ? '' : 's'} from Hackerspace Mumbai`}
        aria-live="polite"
        aria-busy="false"
      >
        {validatedEvents.map((event, index) => (
          <div 
            role="listitem"
            class="w-full max-w-3xl md:max-w-4xl mx-auto"
            aria-setsize={validatedEvents.length}
            aria-posinset={index + 1}
          >
            <EventCard {...event} />
          </div>
        ))}
      </div>
    )}

    {/* Empty state for when no events are available */}
    {validatedEvents.length === 0 && (
      <div 
        class="text-center py-16"
        role="status"
        aria-live="polite"
      >
        <div class="mb-4">
          <svg 
            class="w-16 h-16 mx-auto text-base-content/40" 
            fill="none" 
            stroke="currentColor" 
            viewBox="0 0 24 24"
            aria-hidden="true"
          >
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-base-content mb-2">No upcoming events</h3>
        <p class="text-base-content/70">Check back soon for new meetups and activities from our community!</p>
      </div>
    )}

    {/* CTA Section with enhanced accessibility */}
    <footer class="text-center mt-12">
      <CTAButton 
        href={ctaUrl} 
        variant="soft"
        target="_blank"
        aria-describedby="view-all-events-desc"
        aria-label="View all events (opens in new window)"
      >
        {ctaText}
      </CTAButton>
      <p 
        id="view-all-events-desc" 
        class="sr-only"
      >
        Navigate to the complete events archive to explore all upcoming and past events from Hackerspace Mumbai
      </p>
    </footer>
  </div>
</section>
