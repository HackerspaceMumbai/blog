---
import type { Sponsor } from './types';

export interface Props {
  sponsor: Sponsor;
  size?: 'sm' | 'md' | 'lg';
  showDescription?: boolean;
  className?: string;
}

const { 
  sponsor, 
  size = 'md', 
  showDescription = false, 
  className = '' 
} = Astro.props;

// Size configurations - using fixed heights for consistency
const sizeClasses = {
  sm: 'p-4 h-[120px]',
  md: 'p-6 h-[160px]',
  lg: 'p-8 h-[200px]'
};

const logoSizes = {
  sm: 'max-h-10 max-w-20',
  md: 'max-h-12 max-w-24',
  lg: 'max-h-16 max-w-28'
};

// Enhanced tier-based styling with better contrast for logo visibility
const tierStyles = {
  platinum: 'ring-1 ring-yellow-400/40 bg-gradient-to-br from-base-100 to-yellow-50/30 dark:from-base-100 dark:to-yellow-900/20 border-yellow-300/40 dark:border-yellow-600/40 shadow-yellow-400/10',
  gold: 'ring-1 ring-amber-400/40 bg-gradient-to-br from-base-100 to-amber-50/30 dark:from-base-100 dark:to-amber-900/20 border-amber-300/40 dark:border-amber-600/40 shadow-amber-400/10',
  silver: 'ring-1 ring-gray-400/40 bg-gradient-to-br from-base-100 to-gray-50/30 dark:from-base-100 dark:to-gray-800/20 border-gray-300/40 dark:border-gray-500/40 shadow-gray-400/10',
  bronze: 'ring-1 ring-orange-400/40 bg-gradient-to-br from-base-100 to-orange-50/30 dark:from-base-100 dark:to-orange-900/20 border-orange-300/40 dark:border-orange-600/40 shadow-orange-400/10',
  community: 'ring-1 ring-blue-400/40 bg-gradient-to-br from-base-100 to-blue-50/30 dark:from-base-100 dark:to-blue-900/20 border-blue-300/40 dark:border-blue-600/40 shadow-blue-400/10',
  startup: 'ring-1 ring-green-400/40 bg-gradient-to-br from-base-100 to-green-50/30 dark:from-base-100 dark:to-green-900/20 border-green-300/40 dark:border-green-600/40 shadow-green-400/10',
  partner: 'ring-1 ring-purple-400/40 bg-gradient-to-br from-base-100 to-purple-50/30 dark:from-base-100 dark:to-purple-900/20 border-purple-300/40 dark:border-purple-600/40 shadow-purple-400/10'
};

// Standardized tier labels with consistent iconography
const tierLabels = {
  platinum: 'üíé Platinum',
  gold: 'ü•á Gold',
  silver: 'ü•à Silver', 
  bronze: 'ü•â Bronze',
  community: 'ü§ù Community',
  startup: 'üöÄ Startup',
  partner: 'ü§ù Partner'
};

// Enhanced tier-specific text colors with improved contrast for dark theme
const tierTextColors = {
  platinum: 'text-yellow-800 dark:text-yellow-200',
  gold: 'text-amber-800 dark:text-amber-200',
  silver: 'text-gray-900 dark:text-gray-100',
  bronze: 'text-orange-800 dark:text-orange-200',
  community: 'text-blue-800 dark:text-blue-200',
  startup: 'text-green-800 dark:text-green-200',
  partner: 'text-purple-800 dark:text-purple-200'
};

// Enhanced card classes with refined shadows and depth
const cardClasses = `
  rounded-xl shadow-lg hover:shadow-2xl group cursor-pointer transition-all duration-300 ease-out hover:scale-[1.02] hover:-translate-y-1 relative border
  ${sizeClasses[size as keyof typeof sizeClasses]}
  ${sponsor.tier && tierStyles[sponsor.tier as keyof typeof tierStyles] ? tierStyles[sponsor.tier as keyof typeof tierStyles] : 'bg-base-100 border-base-300 hover:border-primary/50'}
  ${sponsor.featured ? 'featured-sponsor ring-2 ring-primary/40 shadow-primary/10' : ''}
  backdrop-blur-sm
  ${className}
`.trim();

const isClickable = sponsor.url && sponsor.status === 'active';
---

<div 
  class={cardClasses}
  role={isClickable ? 'button' : 'img'}
  aria-label={`${sponsor.name} sponsor${sponsor.tier && tierLabels[sponsor.tier as keyof typeof tierLabels] ? ` - ${tierLabels[sponsor.tier as keyof typeof tierLabels]}` : ''}${isClickable ? ' (opens in new window)' : ''}`}
  tabindex={isClickable ? 0 : -1}
  data-sponsor-tier={sponsor.tier}
  data-sponsor-status={sponsor.status}
>
  {isClickable ? (
    <a 
      href={sponsor.url}
      target="_blank"
      rel="noopener noreferrer"
      class="block h-full w-full text-decoration-none focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 rounded-xl"
      aria-describedby={showDescription && sponsor.description ? `sponsor-desc-${sponsor.name.replace(/\s+/g, '-').toLowerCase()}` : undefined}
    >
      <div class="flex flex-col items-center justify-center h-full text-center space-y-3">
        {/* Tier Badge */}
        {sponsor.tier && tierTextColors[sponsor.tier as keyof typeof tierTextColors] && tierLabels[sponsor.tier as keyof typeof tierLabels] && (
          <div class="absolute top-2 right-2">
            <span class={`inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold bg-base-100/95 dark:bg-base-200/95 backdrop-blur-sm border shadow-md ${tierTextColors[sponsor.tier as keyof typeof tierTextColors]} border-current/30`}>
              {tierLabels[sponsor.tier as keyof typeof tierLabels]}
            </span>
          </div>
        )}

        {/* Featured Badge */}
        {sponsor.featured && (
          <div class="absolute top-2 left-2">
            <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold bg-primary text-primary-content shadow-md">
              ‚≠ê Featured
            </span>
          </div>
        )}

        {/* Logo */}
        {sponsor.logo ? (
          <div class="flex items-center justify-center w-full h-16">
            <img 
              src={sponsor.logo} 
              alt={sponsor.name}
              class={`${logoSizes[size as keyof typeof logoSizes]} object-contain transition-transform duration-300 group-hover:scale-110 filter drop-shadow-sm group-hover:drop-shadow-md`}
              loading="lazy"
              style="display:block;"
            />

          </div>
        ) : (
          <div class={`${logoSizes[size as keyof typeof logoSizes]} w-auto bg-base-200 dark:bg-base-300 rounded-lg flex items-center justify-center`}>
            <span class="text-base-content/60 dark:text-base-content/80 font-medium text-lg">
              {sponsor.name.charAt(0).toUpperCase()}
            </span>
          </div>
        )}

        {/* Sponsor Name */}
        <h3 class="font-semibold text-base-content group-hover:text-primary transition-colors duration-300 text-sm sm:text-base md:text-lg leading-tight tracking-wide line-clamp-2 px-2">
          {sponsor.name}
        </h3>

        {/* Description */}
        {showDescription && sponsor.description && (
          <p 
            id={`sponsor-desc-${sponsor.name.replace(/\s+/g, '-').toLowerCase()}`}
            class="text-xs sm:text-sm text-base-content/80 dark:text-base-content/90 line-clamp-2 max-w-full leading-relaxed px-2"
          >
            {sponsor.description}
          </p>
        )}

        {/* Status Indicator */}
        {sponsor.status && sponsor.status !== 'active' && (
          <div class="absolute bottom-2 right-2">
            <span class={`inline-flex items-center px-2 py-1 rounded-full text-xs font-medium shadow-sm ${
              sponsor.status === 'pending' ? 'bg-warning text-warning-content' :
              sponsor.status === 'expired' ? 'bg-error text-error-content' :
              'bg-base-300 text-base-content/70'
            }`}>
              {sponsor.status}
            </span>
          </div>
        )}

        {/* External Link Indicator (only for clickable) */}
        <div class="absolute bottom-2 left-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
          <svg class="w-4 h-4 text-base-content/60 dark:text-base-content/80" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </div>
      </div>
    </a>
  ) : (
    <div class="flex flex-col items-center justify-center h-full text-center space-y-3">
      {/* Tier Badge */}
      {sponsor.tier && tierTextColors[sponsor.tier as keyof typeof tierTextColors] && tierLabels[sponsor.tier as keyof typeof tierLabels] && (
        <div class="absolute top-2 right-2">
          <span class={`inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold bg-base-100/95 dark:bg-base-200/95 backdrop-blur-sm border shadow-md ${tierTextColors[sponsor.tier as keyof typeof tierTextColors]} border-current/30`}>
            {tierLabels[sponsor.tier as keyof typeof tierLabels]}
          </span>
        </div>
      )}

      {/* Featured Badge */}
      {sponsor.featured && (
        <div class="absolute top-2 left-2">
          <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold bg-primary text-primary-content shadow-md">
            ‚≠ê Featured
          </span>
        </div>
      )}

      {/* Logo */}
      {sponsor.logo ? (
        <div class="flex items-center justify-center w-full h-16">
          <img 
            src={sponsor.logo} 
            alt={sponsor.name}
            class={`${logoSizes[size as keyof typeof logoSizes]} object-contain transition-transform duration-300 group-hover:scale-110 filter drop-shadow-sm group-hover:drop-shadow-md`}
            loading="lazy"
          />

        </div>
      ) : (
        <div class={`${logoSizes[size as keyof typeof logoSizes]} w-auto bg-base-200 dark:bg-base-300 rounded-lg flex items-center justify-center`}>
          <span class="text-base-content/60 dark:text-base-content/80 font-medium text-lg">
            {sponsor.name.charAt(0).toUpperCase()}
          </span>
        </div>
      )}

      {/* Sponsor Name */}
      <h3 class="font-semibold text-base-content group-hover:text-primary transition-colors duration-300 text-sm sm:text-base md:text-lg leading-tight tracking-wide line-clamp-2 px-2">
        {sponsor.name}
      </h3>

      {/* Description */}
      {showDescription && sponsor.description && (
        <p 
          id={`sponsor-desc-${sponsor.name.replace(/\s+/g, '-').toLowerCase()}`}
          class="text-xs sm:text-sm text-base-content/80 dark:text-base-content/90 line-clamp-2 max-w-full leading-relaxed px-2"
        >
          {sponsor.description}
        </p>
      )}

      {/* Status Indicator */}
      {sponsor.status && sponsor.status !== 'active' && (
        <div class="absolute bottom-2 right-2">
          <span class={`inline-flex items-center px-2 py-1 rounded-full text-xs font-medium shadow-sm ${
            sponsor.status === 'pending' ? 'bg-warning text-warning-content' :
            sponsor.status === 'expired' ? 'bg-error text-error-content' :
            'bg-base-300 text-base-content/70'
          }`}>
            {sponsor.status}
          </span>
        </div>
      )}
    </div>
  )}
</div>
