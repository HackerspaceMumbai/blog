---
const { sponsors } = Astro.props;
---
<section class="py-16 px-4 bg-background text-accent">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-3xl font-bold mb-12 text-center">Our Sponsors & Partners</h2>
    <div class="flex flex-wrap justify-center items-center gap-12">
      {sponsors.map(sponsor => (
        <div class="text-center">
          <div class="w-32 h-32 bg-background border border-primary rounded-md flex items-center justify-center">
            <p class="font-bold text-primary">{sponsor.name}</p>
          </div>
        </div>
      ))}
    </div>
    <div class="text-center mt-10">
      <a href="/sponsors" class="inline-block border-2 border-primary text-primary px-6 py-3 rounded-md font-bold hover:bg-primary hover:text-primary-content hover:bg-opacity-10">Become a Sponsor</a>
    </div>
  </div>
</section>
