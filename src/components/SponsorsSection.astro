---
import CTAButton from './CTAButton.astro';
const { sponsors } = Astro.props;
---
<section class="py-16 px-4 bg-base-200 text-base-content">
  <div class="max-w-6xl mx-auto text-center">
    <h2 class="text-3xl font-bold mb-12 text-primary">Our Sponsors</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-12">
      {sponsors.map(sponsor => (
        <div class="flex justify-center">
          <div class="w-32 h-32 bg-base-100 border border-primary rounded-md flex items-center justify-center">
            <span class="text-sm font-medium text-accent">{sponsor.name}</span>
          </div>
        </div>
      ))}
    </div>
    <div class="text-center">
      <CTAButton href="/sponsors" variant="outline">Become a Sponsor</CTAButton>
    </div>
  </div>
</section>
