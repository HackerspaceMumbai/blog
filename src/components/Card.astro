---
export interface CardProps {
  title?: string;
  subtitle?: string;
  image?: string;
  imageAlt?: string;
  actions?: any;
  className?: string;
  style?: string;
}
const {
  title = '',
  subtitle = '',
  image = '',
  imageAlt = '',
  actions = null,
  className = '',
  style = ''
} = Astro.props as CardProps;
---
<div class={`card bg-base-200 border border-primary  rounded-lg shadow-lg hover:shadow-lg hover:shadow-primary flex flex-col h-full ${className}`} style={style}>
  {image && (
    <figure class="mb-4">
      <img src={image} alt={imageAlt || title} class="w-full object-cover rounded" />
    </figure>
  )}
  {/* Title and subtitle are rendered in BlogSection.astro for blog cards with background images */}
  <div class="mb-4 flex-1">
    <slot />
  </div>
  <div class="mt-auto">
    <slot name="actions">{actions ? <div>{actions}</div> : null}</slot>
  </div>
</div>