---
export interface Props {
  title?: string;
  description?: string;
  showRetry?: boolean;
  className?: string;
}

const { 
  title = 'Something went wrong',
  description = 'An error occurred while loading this content. Please try again.',
  showRetry = true,
  className = ''
} = Astro.props;
---

<div class={`error-state text-center py-8 px-4 ${className}`}>
  <div class="mb-4" aria-hidden="true">
    <svg class="w-12 h-12 text-error mx-auto" fill="currentColor" viewBox="0 0 24 24">
      <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM12 9a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0112 9zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"/>
    </svg>
  </div>
  
  <h3 class="text-lg font-semibold text-error mb-2">
    {title}
  </h3>
  
  <p class="text-base-content/70 mb-4 max-w-md mx-auto">
    {description}
  </p>
  
  {showRetry && (
    <button
      class="btn btn-outline btn-error"
      id="retry-button"
    >
      Try Again
    </button>
  )}

<script>
  document.getElementById('retry-button')?.addEventListener('click', () => {
    window.location.reload();
  });
</script></div>