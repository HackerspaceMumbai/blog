---
export interface Props {
  size?: 'sm' | 'md' | 'lg';
  label?: string;
}

const { 
  size = 'md',
  label = 'Loading...'
} = Astro.props;

const sizeClasses = {
  sm: 'w-4 h-4',
  md: 'w-8 h-8',
  lg: 'w-12 h-12'
};
---

<div class="flex items-center justify-center p-4" role="status" aria-label={label}>
  <svg 
    class={`animate-spin text-primary ${sizeClasses[size]}`} 
    fill="none" 
    viewBox="0 0 24 24"
    aria-hidden="true"
  >
    <circle 
      cx="12" 
      cy="12" 
      r="10" 
      stroke="currentColor" 
      stroke-width="4"
      class="opacity-25"
    />
    <path 
      fill="currentColor" 
      d="m4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
      class="opacity-75"
    />
  </svg>
  <span class="sr-only">{label}</span>
</div>