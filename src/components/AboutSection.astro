---
import StatsGrid from './StatsGrid.astro';
import SectionHeading from './SectionHeading.astro';
import { Image } from 'astro:assets';

const stats = Astro.props.stats;

// Import team and community images
import pinnedpic8 from '../assets/images/gallery/pinnedpic-8.jpg';
import pinnedpic6 from '../assets/images/gallery/pinnedpic-6.jpg';
import pinnedpic1 from '../assets/images/gallery/pinnedpic-1.jpg';
---
<section id="about" class="py-12 sm:py-16 lg:py-20 px-4 bg-base-200 text-base-content" aria-labelledby="about-heading" role="region">
  <div class="max-w-6xl mx-auto">
    <SectionHeading 
      id="about" 
      level={2}
      class="text-2xl sm:text-3xl lg:text-4xl font-bold mb-4 sm:mb-6 text-primary leading-tight text-center order-1"
    >
      About Us
    </SectionHeading>
  <div class="flex flex-col lg:grid lg:grid-cols-2 gap-8 sm:gap-10 lg:gap-12 lg:items-start">
    <div class="space-y-4 sm:space-y-5 order-2">
      <p class="text-sm sm:text-base lg:text-lg leading-relaxed text-base-content/90">
        Hackerspace Mumbai is the largest open source community in Mumbai and hosts the city's longest-running tech meetup series. Founded in 2011, we bring together developers, designers, and tech enthusiasts to learn, collaborate, and build together.
      </p>
      <p class="text-sm sm:text-base lg:text-lg leading-relaxed text-base-content/90">
        Our mission is to foster a vibrant, inclusive tech community that promotes knowledge sharing, collaboration, and innovation through open source principles.
      </p>
      <p class="text-sm sm:text-base lg:text-lg leading-relaxed text-base-content/90">
        We organize regular meetups, workshops, hackathons, and other events to help members grow their skills, connect with peers, and contribute to meaningful projects.
      </p>
    </div>
    <div class="flex justify-center lg:justify-start order-3">
      <StatsGrid stats={stats} />
    </div>
  </div>

  <!-- <CommunityGallery /> -->

  <!-- Add testimonials section 
  <Testimonials testimonials={testimonials} />
   when ready -->
  </div>
</section>
