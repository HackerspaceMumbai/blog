      <section id="events" class="py-16 px-4 bg-background text-accent">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold mb-12 text-center">Upcoming Events</h2>
          <div class="grid md:grid-cols-2 gap-8">
            {upcomingEvents.map(event => (
              <div class="card bg-background border border-primary p-6 rounded-lg">
                <h3 class="text-xl font-bold mb-2">{event.title}</h3>
                <p class="text-primary mb-1">{event.date}</p>
                <p class="mb-4">{event.location}</p>
                <p class="mb-6">{event.description}</p>
                <a href={event.rsvpLink} target="_blank" rel="noopener" class="inline-block bg-primary text-black px-4 py-2 rounded font-semibold hover:bg-opacity-90">RSVP Now</a>
              </div>
            ))}
          </div>
          <div class="text-center mt-10">
            <a href="https://meetup.com/hackerspace-mumbai" target="_blank" rel="noopener" class="inline-block border-2 border-primary text-primary px-6 py-3 rounded-md font-bold hover:bg-primary hover:bg-opacity-10">View All Events</a>
          </div>
        </div>
      </section>

      <!-- 3. Community Blog & News -->
      <section class="py-16 px-4 bg-background text-accent">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold mb-12 text-center">Latest Blog Posts</h2>
          <div class="grid md:grid-cols-3 gap-8">
            {posts.map(post => (
              <div class="card bg-background border border-primary p-6 rounded-lg">
                <h3 class="text-xl font-bold mb-2">{post.data.title}</h3>
                <p class="text-sm text-primary mb-4">
                  By {post.data.author} on {new Date(post.data.date).toLocaleDateString('en-in', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                  })}
                </p>
                <p class="mb-6">{post.data.description}</p>
                <a href={`/blog/${post.slug}/`} class="inline-block text-primary font-bold hover:underline">Read More â†’</a>
              </div>
            ))}
          </div>
          <div class="text-center mt-10">
            <a href="/blog" class="inline-block border-2 border-primary text-primary px-6 py-3 rounded-md font-bold hover:bg-primary hover:bg-opacity-10">View All Posts</a>
          </div>
        </div>
      </section>

      <!-- 4. About the Community -->
      <section id="about" class="py-16 px-4 bg-background text-accent">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl font-bold mb-12 text-center">About Our Community</h2>
          <div class="grid md:grid-cols-2 gap-12 items-center">
            <div>
              <p class="mb-4">Hackerspace Mumbai is the largest open source community in Mumbai and hosts the city's longest-running tech meetup series. Founded in 2018, we bring together developers, designers, and tech enthusiasts to learn, collaborate, and build together.</p>
              <p class="mb-4">Our mission is to foster a vibrant, inclusive tech community that promotes knowledge sharing, collaboration, and innovation through open source principles.</p>
              <p>We organize regular meetups, workshops, hackathons, and other events to help members grow their skills, connect with peers, and contribute to meaningful projects.</p>
            </div>
            <div>
              <div class="grid grid-cols-2 text-center">
                <div class="stats-item p-6">
                  <p class="text-4xl font-bold text-primary">{stats.yearsRunning}</p>
                  <p>Years Running</p>
                </div>
                <div class="stats-item p-6">
                  <p class="text-4xl font-bold text-primary">{stats.meetupsHosted}</p>
                  <p>Meetups Hosted</p>
                </div>
                <div class="stats-item p-6">
                  <p class="text-4xl font-bold text-primary">{stats.membersCount}</p>
                  <p>Community Members</p>
                </div>
                <div class="stats-item p-6">
                  <p class="text-4xl font-bold text-primary">{stats.projectsSupported}</p>
                  <p>Projects Supported</p>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Testimonials -->
          <h3 class="text-2xl font-bold mt-16 mb-8 text-center">What Our Community Says</h3>
          <div class="grid md:grid-cols-2 gap-8">
            {testimonials.map(testimonial => (
              <div class="bg-background border border-primary p-6 rounded-lg">
                <p class="italic mb-4">"{testimonial.quote}"</p>
                <p class="font-bold text-primary">â€” {testimonial.author}</p>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- 5. Get Involved / Join Us -->
      <section id="join" class="py-16 px-4 bg-background text-accent">
